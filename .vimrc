set scrolloff=3
colorscheme elflord
set number relativenumber
set ruler

filetype plugin indent on

set tabstop=2
set shiftwidth=2
set expandtab

set foldmethod=syntax
set foldnestmax=10
set nofoldenable
set foldlevel=1

set laststatus=2
set statusline+=%F
set statusline=%<%F%h%m%r%=%b\ %l,%c%V\ %P

set ignorecase
set smartcase
